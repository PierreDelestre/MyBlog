@page "/"
@using MyBlog.data
@using MyBlog.data.Interfaces
@using MyBlog.data.Models
@inject IMyBlogAPI api

<button @onclick="AddSomePosts">Add some fake posts</button>
<br/>
<br/>
<ul>
    @foreach (var p in posts)
    {
        <li>@p.Title</li>
    }
</ul>
 
@code{
    protected List<BlogPost> posts = new List<BlogPost>();

    protected async Task AddSomePosts()
    {
        for (int i = 1; i < 10; i++)
        {
            await api.SaveBlogPost(new BlogPost()
            {
                PublishDate = DateTime.Now,
                Title = $"Blog post {i}",
                Text = "Text"
            });
        }
    }

    protected override async Task OnInitializedAsync()
    {
        posts = await api.GetBlogPosts(10, 0);
        await base.OnInitializedAsync();
    }


}